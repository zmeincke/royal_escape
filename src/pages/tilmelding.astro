---
import "../css/style.css";
import "../css/tilmelding.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Button from "../components/Button.astro";
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex" />
    <meta
      name="description"
      content="Tilmeld dig her. Løs mysteriet og få rabat til et escape room."
    />
    <title>Royalescape</title>
  </head>

  <body>
    <Header />
    <main>
      <div class="formbox">
        <form id="tilmelding-form">
          <label for="navn">Navn</label>
          <input placeholder="Jens" type="text" />
          <label for="efternavn">Efternavn</label>
          <input placeholder="Jensen" type="text" />
          <label for="email">E-mail</label>
          <input placeholder="Jensjensen@mail.dk" type="text" />
        </form>
        <div class="last-div">
          <img class="krone" src="../public/crown-icon.webp" alt="krone" />
          <div class="knap">
            <Button variant="grey" text="START" />
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </body>
  <script src="../js/burgermenu.js"></script>
</html>
